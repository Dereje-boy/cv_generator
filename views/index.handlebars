<style>
    .index-container {
        background-color: #f3f3f3;
        border-radius: 20px;
        padding: 20px;
        height: 100%;
        min-height: 100vh;
    }

    .card {
        border: 1px solid white;
        border-radius: 10px;
        transition: transform 0.2s;
        width: 300px;
        height: 400px;
    }

    .card:hover {
        transform: translateY(-5px);
        cursor: pointer;
        border: 1px solid blue;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        text-align: center;
    }

    .index-loading-container {
        opacity: 0;
        position: fixed;
        inset: 0;
        width: 100vw;
        height: 100vh;
        background-color: #0C0603;
        display: grid;
        place-content: center;
        z-index: 999;
        transition-property: opacity;
        transition-duration: .5s;
        transition-timing-function: ease-in-out;
    }

    .fullscreen-loader {
        width: 60px;
        height: 60px;
        border: 5px solid green;
        border-left-color: transparent;
        border-right-color: transparent;
        border-radius: 50%;
        animation: .5s ease infinite alternate spinner2;
    }

    @keyframes spinner2 {
        form {
            transform: rotate(360deg) scale(1);
        }

        to {
            transform: rotate(1turn) scale(1.6);
        }
    }


    .card {
        position: relative;
    }

    .image-placeholder {
        position: absolute;
        width: 100%;
        height: 50%;
        background-color: white;
        top: 0;
        left: 0;
        display: grid;
        place-content: center;
        transition-property: opacity;
        transition-duration: 1s;
        transition-timing-function: ease-in-out;

    }

    .image-loader {
        width: 60px;
        height: 60px;
        border: 5px solid green;
        border-left-color: transparent;
        border-right-color: transparent;
        border-radius: 50%;
        animation: .5s ease infinite alternate spinner;
    }
</style>

