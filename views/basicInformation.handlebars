<style>
    input,
    label {
        font-family: "Georgia", Times, serif;
    }
</style>

<div class=" d-flex flex-wrap ">
    <p class="fs-3 text-warning text-wrap text-underline text-center w-100">

        {{message}}

    </p>

    <div>
        <h3 class="text-primary fw-bold text-uppercase">Add Your Personal Information</h3>
        <img src="/Images/personal_information.png" alt="">
    </div>

    <form class="container w-50 h-100 d-flex flex-column align-items-center gap-3" method="post"
        action="basicInformation">
        <div class="form-group w-75">
            <label for="firstname" class="control-label fs-4"> Firstname</label>
            <input type="text" name="firstname" class="form-control fw-bold p-2 fs-3" required value={{firstname}}>
        </div>
        <div class="form-group w-75">
            <label for="Lastname" class="control-label fs-4">Lastname</label>
            <input type="text" name="lastname" class="form-control fw-bold p-2 fs-3" required value={{lastname}}>
        </div>
        <div class="form-group w-75">
            <label for="phoneNumber" class="control-label fs-4">Phone No.</label>
            <input type="tel" name="phoneNumber" class="form-control fw-bold p-2 fs-3" required value={{phoneNumber}}>
        </div>
        <div class="form-group w-75">
            <label for="email" class="control-label fs-4">Email</label>
            <input type="email" name="email" class="form-control fw-bold p-2 fs-3" required value={{email}}>
        </div>
        <div class="form-group w-75">
            <label for="city" class="control-label fs-4">City</label>
            <input type="city" name="city" class="form-control fw-bold p-2 fs-3" required value={{city}}>
        </div>
        <div class="form-group w-75">
            <label for="region" class="control-label fs-4">State or Region</label>
            <input type="region" name="region" class="form-control fw-bold p-2 fs-3" required value={{region}}>
        </div>
        <div class="form-group w-75">
            <label for="aboutMe" class="control-label fs-4 ">About Me</label>
            <textarea name="aboutMe" id="about-me" rows="5" class="form-control fw-bold p-2 fs-3">{{aboutMe}}</textarea>
        </div>
        <div class="form-group w-75">
            <label for="image" class="control-label fs-4 ">Uploaded Image</label>
            <div id="imageContinaer" style="border:1px solid none; border-radius:20px;"
                class="m-2 bg-white border border-primary">
                <img id="image" src="" alt="" class="" width="100%" style="border-radius:20px;">
            </div>
            <input type="file" id="imageinput" name="image" accept="image/jpeg, image/png"
                class="form-control fw-bold p-2 ">
        </div>
        <div class="form-group w-75">
            <input type="submit" value="Submit" class="btn btn-primary align-self-center w-100">
        </div>
</div>

</div>

<script src="./script/basicInformation.js">

</script>