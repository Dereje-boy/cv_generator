<style>
    input,
    label {
        font-family: "Georgia", Times, serif;
    }
</style>

<div class=" d-flex flex-wrap ">
    <p class="fs-3 text-primary text-wrap text-capitalize text-center w-100 fw-bold ">
        {{message}}
    </p>

    <div class="">
        <h3 class="text-primary fw-bold text-uppercase text-center ">Add Your Personal Information</h3>
        <img src="/Images/personal_information.png" alt="" class="w-100">
    </div>
    {{#with pi}}
    <form class="container w-50 h-100 d-flex flex-column align-items-center gap-3" method="post"
        action="basicInformation" enctype="multipart/form-data">
        <div class="form-group w-75">
            <label for="firstname" class="control-label fs-4"> Firstname</label>
            <input type="text" name="firstname" class="form-control fw-bold p-2 fs-3 text-capitalize" required
                value={{firstname}}>
        </div>
        <div class="form-group w-75">
            <label for="Lastname" class="control-label fs-4">Lastname</label>
            <input type="text" name="lastname" class="form-control fw-bold p-2 fs-3 text-capitalize" required
                value={{lastname}}>
        </div>
        <div class="form-group w-75">
            <label for="phoneNumber" class="control-label fs-4">Phone No.</label>
            <input type="tel" name="phoneNumber" class="form-control fw-bold p-2 fs-3 text-capitalize" required
                value={{phoneNumber}}>
        </div>
        <div class="form-group w-75">
            <label for="email" class="control-label fs-4">Email</label>
            <input type="email" name="email" class="form-control fw-bold p-2 fs-3 text-capitalize" required readonly
                value={{email}}>
        </div>
        <div class="form-group w-75">
            <label for="city" class="control-label fs-4">City</label>
            <input type="text" name="city" class="form-control fw-bold p-2 fs-3 text-capitalize" required
                value={{city}}>
        </div>
        <div class="form-group w-75">
            <label for="state" class="control-label fs-4">State or Region</label>
            <input type="text" name="state" class="form-control fw-bold p-2 fs-3 text-capitalize" required
                value={{state}}>
        </div>
        <div class="form-group w-75">
            <label for="aboutMe" class="control-label fs-4 ">About Me</label>
            <textarea name="aboutMe" id="about-me" rows="5"
                class="form-control fw-bold p-2 fs-3 text-capitalize">{{aboutMe}}</textarea>
        </div>
        <div class="form-group w-75">
            <label for="image" class="control-label fs-4 ">Uploaded Image </label>
            <div id="imageContinaer" style="border:1px solid black; border-radius:20px;"
                class="m-2 bg-white border border-primary">
                <img id="image" src="{{pp_image_path}}" alt="" class="" width="100%" style="border-radius:20px;">
            </div>
            <input type="file" id="imageinput" name="image" accept="image/jpeg, image/png"
                class="form-control fw-bold p-2 ">
            <p class="text-danger">Only .jpeg and .png image file</p>
            <p class="text-danger">Make sure the image is square</p>
        </div>
        <div class="form-group w-75">
            {{#if alreadyExist}}
            <input type="submit" value="Update" class="btn btn-success align-self-center w-100">
            {{else}}
            <input type="submit" value="Insert" class="btn btn-primary align-self-center w-100">
            {{/if}}
        </div>
    </form>
    {{/with }}
    <img id="image" src="{{pp_image_path}}" alt="" class="" width="100%" style="border-radius:20px;">

</div>

<script src="./script/basicInformation.js">

</script>