{{!-- exp means experience --}}
<style>
    .hob-container {
        border-radius: 10px;
        min-height: 80vh;
    }
</style>

<div class="hob-container w-100 border border-primary p-2 d-flex gap-2">


    <div class="left-container w-50 min-h-100 border border-success d-flex flex-column gap-3 p-3">
        <h3 class="w-100 text-center text-success fw-bold">Your Added
            Hobbies</h3>

        <div class="one-added-hob card w-100 p-2">
            <div class="card-header">
                <h5>All of your Hobbies</h5>
                <div class="card-body">
                    <div class="btn bg-secondary card-title text-white ">
                        <p>Playing Football </p>
                        <button class="btn btn-secondary">X</button>
                    </div>
                    <div class="btn bg-secondary card-title text-white ">
                        <p>Watching Movies</p>
                        <button class="btn btn-secondary">X</button>
                    </div>
                    <div class="btn bg-secondary card-title text-white ">
                        <p>Hiking</p>
                        <button class="btn btn-secondary">X</button>
                    </div>
                    <div class="btn bg-secondary card-title text-white ">
                        <p>Riding Force</p>
                        <button class="btn btn-secondary">X</button>
                    </div>
                </div>
                <p class="card-text"> To Delete click X button next to the hobby</p>
            </div>

        </div>

    </div>

    {{!-- right container --}}
    <div class="right-container w-50 min-h-100 border border-warning d-flex flex-column gap-3 p-3">
        <h3 class="w-100 text-center text-warning fw-bold">Add Your New Hobby</h3>

        <p class="fs-3 text-warning text-wrap text-underline text-center w-100">
            {{message}}
        </p>

        <form class="container w-75 h-100 d-flex flex-column align-items-center gap-3" method="post" action="hobbies">
            <div class="form-group w-100">
                <label for="hobbies" class="control-label fs-4">Hobbies *</label>
                <input type="text" name="hobbies" class="form-control fw-bold p-2 fs-4" required value={{hobbies}}>
                <p>Separate your multiple hobbies by comma (,) eg: hiking, riding, playing cricket</p>
            </div>
            <div class="form-group w-50">
                <input type="submit" value="Add Hobbies" class="btn btn-primary align-self-center w-100 fs-4">
            </div>
        </form>
    </div>

</div>