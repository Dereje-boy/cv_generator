<style>
    .lang-container {
        border-radius: 10px;
        min-height: 80vh;
    }

    .one-added-lang {
        opacity: 1;
        display: block;
        transition: opacity;
        transition-duration: 1s;
        transition-timing-function: ease-in-out;

    }
</style>

<script src="/script/jQuery.js"></script>

<div class="lang-container w-100 min-h-100 d-flex flex-column">

    <h3 class="text-center text-primary fw-bold">Your Added
        Languages</h3>

    <p class="fw-bold fs-3 text-warning text-wrap text-underline text-center w-100">
        {{message}}
    </p>

    <div class="left-container flex-grow-1 w-100 d-flex flex-wrap gap-3 p-2 justify-content-center align-items-center">

        {{#each thisUserLanguages}}
            <div class="one-added-lang card p-2 h-25">
                <div class="card-header">
                    <h4 class="text-black text-capitalize ">{{language}}</h4>
                </div>
                <div class="card-body d-flex flex-column gap-3 align-items-center">
                    <h5 class="ps-3 card-title">Level : {{level}}</h5>
                    <button id="{{id}}" type="button" class="delete-language-btn btn btn-link text-danger">Delete
                    </button>
                </div>
            </div>

        {{/each}}
    </div>


    <div class="d-flex justify-content-center p-3">
        <button
                type="button"
                class="button is-link"
                data-toggle="modal"
                data-target="#addLangModal" >
            Add New Language
        </button>
    </div>


    <!--    Modal-->

    <div class="modal fade"
         id="addLangModal"
         tabindex="-1"
         aria-labelledby="exampleModalLabel"
         aria-hidden="true"
         role="modal">

        <form id="add-lang-form"
              method="post"
              action="languages">
            <div class="modal-dialog" role="document">
                <div class="modal-content px-0 mx-0">
                    <div class="modal-header d-flex">
                        <h4
                                class="modal-title text-primary flex-grow-1 d-flex justify-content-center"
                                id="loginModalLabel">
                            Adding New Language
                        </h4>
                        <button
                                type="button"
                                class="close btn btn-danger border-0"
                                data-dismiss="modal"
                                aria-label="Close">
                            <span aria-hidden="true">
                                X
                            </span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <label
                            for="language"
                            class="form-label w-100 fw-bold mt-4">
                            Language *
                        </label>
                        <input
                            type="text"
                            name="language"
                            class="form-control fw-bold px-2 fs-5"
                            required/>

                        <label
                                for="level"
                                class="form-label w-100 fw-bold mt-4">
                            Level *
                        </label>
                        <select
                                id="level"
                                name="level"
                                class="form-control fw-bold px-2 fs-5"
                                required
                                value="Fluent">
                            <option value="Native" selected>Native</option>
                            <option value="Fluent">Fluent</option>
                            <option value="Advanced">Advanced</option>
                            <option value="Beginner">Beginner</option>
                        </select>


                    </div>

                    <div class="modal-footer ">
                        <input
                                id="submit-button"
                                type="submit"
                                value="Add Education"
                                class="w-100 justify-content-center btn btn-success">
                    </div>
                </div>
            </div>
        </form>
    </div>

