{{!-- exp means experience --}}

<style>
    .exp-container {
        border-radius: 10px;
        min-height: 80vh;
    }

    .left-container,
    .right-container {
        border-radius: 10px;
    }

    .one-added-exp {
        border: 2px solid white;
        border-radius: 0px;
        opacity: 1;
        transition-property: opacity, border, border-radius;
        transition-duration: 1s;
        transition-timing-function: ease-in-out;
    }

    .one-added-exp:hover {
        border-width: 2px;
        border-color: #23e279;
        border-radius: 20px;
    }
</style>

<div class="exp-container w-100 d-flex gap-2 flex-lg-row flex-column ">
    {{!-- left container --}}
    <div class="left-container flex-grow-1 min-h-100 border border-warning d-flex flex-column gap-3 p-2">
        <h3 class="w-100 text-center text-warning fw-bold">Add Your New Experience</h3>


        <p class="fs-3 text-warning text-wrap text-underline text-center w-100">

            {{message}}

        </p>

        <form class="container w-lg-75 w-100 h-100 d-flex flex-column align-items-center gap-3" method="post"
            action="experience">
            <div class="form-group w-100">
                <label for="position" class="control-label fs-4">Position *</label>
                <input type="text" name="position" class="form-control fw-bold p-2 fs-3" required >
            </div>
            <div class="form-group w-100">
                <label for="startDate" class="control-label fs-4">Start Date *</label>
                <input type="date" name="startDate" class="form-control fw-bold p-2 fs-3" required >
            </div>
            <div class="form-group w-100">
                <label for="stillHere" class="control-label fs-4">
                    Still I work Here
                    <input id="checkbox" type="checkbox" name="stillHere" class="control-label fs-4">
                </label>
                <b></b>

                <label for="endDate" class="control-label fs-4">End Date
                    <input id="endDate" type="date" name="endDate" class="form-control fw-bold p-2 fs-3"
                        >
                </label>
            </div>
            <div class="form-group w-100">
                <label for="companyName" class="control-label fs-4">Company Name</label>
                <input type="text" name="companyName" class="form-control fw-bold p-2 fs-3" required >
            </div>
            <div class="form-group w-100">
                <label for="aboutExperience" class="control-label fs-4 ">About The Experience *</label>
                <textarea name="aboutExperience" id="about-me" rows="5" class="form-control fw-bold p-2 fs-3"
                    required></textarea>
            </div>
            <div class="form-group w-100 d-flex justify-content-center">
                <input type="submit" value="Add Experience" class="btn btn-primary align-self-center fs-3 text-wrap">
            </div>
        </form>


    </div>

    <div class="right-container flex-grow-1 min-h-100 border border-primary d-flex flex-column gap-3 p-2 overflow-hidden">

        <h3 class="w-100 text-center text-success fw-bold">Your Added
            Experiences</h3>

        {{#each thisExp}}
            <div class="one-added-exp card w-100 p-2">
                <div class="card-header">
                    <h4>Position:
                        <span class="text-primary fw-bold text-capitalize">
                            {{position}}
                        </span>
                    </h4>
                </div>
                <div class="card-body d-flex flex-wrap flex-column gap-1">
                    <h5 class="ps-3 card-title">Company :
                        <span class="text-primary fw-bold text-capitalize">
                            {{companyName}}
                        </span>
                    </h5>
                    <h5 class="ps-3 card-title">Start Date:
                        <span class="text-success fw-bold text-capitalize">{{startDate}}</span>
                    </h5>
                    <h5 class="ps-3 card-title">End Date:
                        <span class="text-danger fw-bold text-capitalize">
                            {{endDate}}
                        </span>
                    </h5>
                    <h5 class="ps-3 card-title">About The Experience</h5>
                    <h6 class="ps-3 card-text text-wrap">
                    <span class="text-success fw-bold text-capitalize text-wrap">
                        {{aboutExperience}}
                    </span>
                    </h6>
                    <button id="{{_id}}" type="button" class=" btn btn-danger d-flex align-self-center ">Delete</button>
                </div>

            </div>
        {{/each}}

    </div>

</div>

<script src="/script/experience.js"></script>